<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.streetwise.notifications" version="2.0.1"
       name="Streetwise News" provider-name="Streetwise">
  <requires>
  	<import addon="xbmc.python" version="2.1.0"/>
  	<import addon="script.module.addon.common" optional="true" />
  </requires>
  <extension point="xbmc.python.script" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="service.py" start="startup">
  </extension>
  <extension point="xbmc.addon.metadata">
  	<summary>Streetwise Build News</summary>
  	<description>Receive Important Streetwise Build Information. Unsubscribe within Add-on Settings.</description>
  	<disclaimer>We take no responsibility for any problems this plugin might in any way, form, shape or size cause.</disclaimer>
  	<language>en</language>
  	<platform>all</platform>
  	<website></website>
  	<source></source>
  	<email></email>
  </extension>
</addon>

<addon id="plugin.program.StreetwiseUpdate" name="Streetwise Extra's" version="2.0" provider-name="Streetwise">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Streetwise Downloader</summary>
    <description lang="en">Update's Settings and More for Streetwise Builds</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.program.StreetwiseWizard" name="Streetwise Wizard" version="2.1" provider-name="Streetwise">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Streetwise Wizard</summary>
    <description lang="en">This Wizard allows you to get access to the latest Streetwise Custom Builds.</description>
    <platform>all</platform>
  </extension>
</addon>

    <addon id="repository.Streetwise" name="Streetwise Repo" version="2.5" provider-name="Streetwise">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="Streetwise Repo">
            <info compressed="false">https://github.com/Streetwise007/Streetwise/raw/master/_repo/addons.xml</info>
            <checksum>https://github.com/Streetwise007/Streetwise/raw/master/_repo/addons.xml.md5</checksum>
            <datadir zip="true">https://github.com/Streetwise007/Streetwise/raw/master/_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Streetwise Repsitory</summary>
            <description>Download and keep upto date with Streetwise Add-ons</description>
            <platform>all</platform>
			</extension>
    </addon>
</addons>
